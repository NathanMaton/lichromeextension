{
  "manifest_version": 3,
  "name": "LinkedIn Job Connection Checker",
  "version": "1.0",
  "description": "Checks for LinkedIn connections at companies when viewing job postings",
  "permissions": [
    "activeTab",
    "storage",
    "identity"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://api.linkedin.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*",
        "https://boards.greenhouse.io/*"
      ],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}